<h1>Contact</h1>

<table>
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Email
      </th>
      <th>
        Subject
      </th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.subject %></td>
        <td><%= link_to "View", admin_contact_path(contact) %></td>
        <td><%= link_to "Delete", admin_contact_path(contact), :method => :delete, :confirm => 'Are you sure?' %></td>
    <% end %>
  </tbody>
</table>