<%= semantic_form_for(User.new, :url => admin_login_path) do |form| %>
  <%= form.inputs do %>
    <%= form.input :name, :label => 'Username', :required => false %>
    <%= form.input :password %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :button_html => {:value => 'Login'} %>
  <% end %>
<% end %>