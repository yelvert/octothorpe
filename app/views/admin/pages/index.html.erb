<h1>Pages</h1>

<%= link_to "New Page", new_admin_page_path %>
<table id="pages">
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        URL
      </th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <%= content_tag_for :tr, page do %>
        <td><%= page.title %></td>
        <td><%= page.pretty_path %></td>
        <td><%= link_to "View", page.pretty_path %></td>
        <td><%= link_to "Edit", edit_admin_page_path(page) %></td>
        <td><%= link_to "Delete", admin_page_path(page), :method => :delete, :confirm => 'Are you sure?' %></td>
      <% end %>
    <% end %>
  </tbody>
</table>