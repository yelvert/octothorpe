<%= semantic_form_for([:admin, @user]) do |form| %>
  <%= form.inputs do %>
    <%= form.input :name, :label => 'Username' %>
    <%= form.input :password, :required => form.object.new_record? %>
    <%= form.input :password_confirmation, :label => 'Password Confirmation', :required => form.object.new_record? %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button %>
  <% end %>
<% end %>