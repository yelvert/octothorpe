<h1>Users</h1>

<%= link_to "New User", new_admin_user_path %>
<table id="users">
  <thead>
    <tr>
      <th>
        Name
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <%= content_tag_for :tr, user do %>
        <td><%= user.name %></td>
        <td><%= link_to "Edit", edit_admin_user_path(user) %></td>
        <td><%= link_to "Delete", admin_user_path(user), :method => :delete, :confirm => 'Are you sure?' %></td>
      <% end %>
    <% end %>
  </tbody>
</table>