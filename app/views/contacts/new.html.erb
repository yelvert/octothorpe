<%= semantic_form_for(@contact) do |form| %>
  <%= form.inputs do %>
    <%= form.input :name %>
    <%= form.input :email %>
    <%= form.input :subject %>
    <%= form.input :content, :label => 'Message', :input_html => {:rows => 5} %>
  <% end %>
  
  <%= form.buttons do %>
    <%= form.commit_button :button_html => {:value => 'Send'} %>
  <% end %>
<% end %>