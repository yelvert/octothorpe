<!DOCTYPE html>
<html>
<head>
  <title>Octothorpe</title>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag @page.title_for_url if @page %>
  <%= stylesheet_link_tag 'formtastic' %>
  <%= stylesheet_link_tag 'formtastic_changes' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= yield :page_javascripts %>
  <style type="text/css" media="screen">
    <%= yield :page_style %>
  </style>
</head>
<body>
  <%= render 'admin/admin_bar' if logged_in? %>
  <div id="header-container">
    <div id="header">
      <div id="company-name">
        Octothor.pe
      </div>
      <div id="top-nav-container">
        <%= render 'shared/top_menu' %>
      </div>
    </div>
  </div>
  <div id="page-content">
    <%= yield %>
  </div>
  <div id="footer">
    <%= render 'shared/copyright' %>
  </div>
</body>
</html>
